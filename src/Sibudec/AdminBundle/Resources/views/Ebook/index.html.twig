{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ebook list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Url</th>
                <th>Category</th>
                <th>Subscriptiontype</th>
                <th>Bibliography</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_ebook_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.subscriptionType }}</td>
                <td>{{ entity.bibliography }}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_ebook_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_ebook_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_ebook_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
