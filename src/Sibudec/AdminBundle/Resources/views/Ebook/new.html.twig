{% extends '::base.html.twig' %}

{% block body -%}
    <div class="content pure-g">
        <div class="content-header pure-g">
            <div class="pure-u-1-2">
                <h1 class="content-title">Ebooks</h1>
                <p class="content-subtitle">
                    Complete el formulario para agregar nuevo Ebook.
                </p>
            </div>
            <div class="pure-u-1-2 content-controls">
                <a class="pure-button secondary-button" href="{{ path('admin_ebook') }}">Volver</a>
            </div>
        </div>
        <div class="content-body pure-u-1">
            <form action="{{ path('admin_ebook_create') }}" method="post" {{ form_enctype(form) }} class="pure-form pure-form-stacked">
                <div class="pure-g-r">
                    {{ form_errors(form) }}
                    <fieldset>
                        <div class="pure-u-1">
                            {{ form_label(form.title) }}
                            {{ form_errors(form.title) }}
                            {{ form_widget(form.title, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="pure-u-1-3">
                            {{ form_label(form.author) }}
                            {{ form_errors(form.author) }}
                            {{ form_widget(form.author, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                        <div class="pure-u-1-3">
                            {{ form_label(form.editorial) }}
                            {{ form_errors(form.editorial) }}
                            {{ form_widget(form.editorial, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                        <div class="pure-u-1-3">
                            {{ form_label(form.year) }}
                            {{ form_errors(form.year) }}
                            {{ form_widget(form.year, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="pure-u-1">
                            {{ form_label(form.url) }}
                            {{ form_errors(form.url) }}
                            {{ form_widget(form.url, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="pure-u-1-2">
                            {{ form_label(form.category) }}
                            {{ form_errors(form.category) }}
                            {{ form_widget(form.category, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                        <div class="pure-u-1-2">
                            {{ form_label(form.source) }}
                            {{ form_errors(form.source) }}
                            {{ form_widget(form.source, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="pure-u-1-4">
                            {{ form_label(form.subscriptionType) }}
                            {{ form_errors(form.subscriptionType) }}
                            {{ form_widget(form.subscriptionType, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                        <div class="pure-u-1-4">
                            {{ form_label(form.accessType) }}
                            {{ form_errors(form.accessType) }}
                            {{ form_widget(form.accessType, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                        <div class="pure-u-1-4">
                            {{ form_label(form.bibliography) }}
                            {{ form_errors(form.bibliography) }}
                            {{ form_widget(form.bibliography, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                        <div class="pure-u-1-4">
                            {{ form_label(form.status) }}
                            {{ form_errors(form.status) }}
                            {{ form_widget(form.status, {'attr': {'class': 'pure-input-1'}}) }}
                        </div>
                    </fieldset>
                    {{ form_rest(form) }}
                </div>
                <br/>
                <button type="submit" class="pure-button success">Guardar</button>
            </form>
        </div>
    </div>
{% endblock %}